<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geuso.disrupty">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_disrupty"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_disrupty_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".settings.DisruptyPreferenceActivity"
            android:label="@string/action_settings"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".subscription.EditSubscriptionActivity"
            android:label="@string/nav_create_subscription"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".disruption.log.DisruptionCheckActivity"
            android:label="@string/nav_disruption_check_log"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".disruption.log.DisruptionCheckDetailActivity"
            android:label="@string/nav_disruption_check_log"
            android:theme="@style/AppTheme"
            />

        <receiver android:name=".notification.AutoStart">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".notification.DisruptionCheckAlarm" android:exported="true">
            <intent-filter>
                <action android:name="disrupty.START_DISRUPTION_CHECK_ALARM"/>
            </intent-filter>
        </receiver>

        <service
            android:name=".notification.DisruptionCheckService"
            android:enabled="true"
            android:process=":disruption_check_service"
            android:label="Disrupty service checking for disruptions!"/>

    </application>

</manifest>
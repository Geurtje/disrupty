<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button_trigger_disruption_check"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/trigger_disruption_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <fragment
        android:id="@+id/subscription_list_fragment"
        android:name="com.geuso.disrupty.disruption.log.DisruptionCheckListFragment"
        android:layout_width="match_parent"
        android:layout_height="455dp"
        app:layout_constraintTop_toBottomOf="@+id/button_trigger_disruption_check" />

</android.support.constraint.ConstraintLayout>
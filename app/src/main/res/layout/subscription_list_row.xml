<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sub_row_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sub_row_station_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/sub_row_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sub_row_station_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/station_divider"
        app:layout_constraintStart_toEndOf="@+id/sub_row_station_from"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sub_row_station_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/sub_row_station_divider"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sub_row_time_from"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/sub_row_id"
        app:layout_constraintTop_toBottomOf="@+id/sub_row_station_from" />

    <TextView
        android:id="@+id/sub_row_time_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="@string/time_divider"
        app:layout_constraintStart_toEndOf="@+id/sub_row_time_from"
        app:layout_constraintTop_toBottomOf="@+id/sub_row_station_from" />

    <TextView
        android:id="@+id/sub_row_time_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/sub_row_time_divider"
        app:layout_constraintTop_toBottomOf="@+id/sub_row_station_from" />

    <ImageView
        android:id="@+id/sub_row_status_icon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/subscription_row_status_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toEndOf="@+id/sub_row_station_to"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_subscription_status_unkown" />

</android.support.constraint.ConstraintLayout>